pipeline {
    agent any
    
    environment {
        // Define environment variables here
    }
    
    stages {
        stage('Build') {
            steps {
                // Build steps (e.g., compile code)
                sh 'make'
            }
        }
        
        stage('Test') {
            steps {
                // Testing steps (e.g., run unit tests)
                sh 'make test'
            }
        }
        
        stage('Deploy to Development') {
            when {
                branch 'develop'
            }
            steps {
                // Deployment steps for development
                sh './deploy.sh dev'
            }
        }
        
        stage('Deploy to Staging') {
            when {
                branch 'main'
            }
            steps {
                // Deployment steps for staging
                sh './deploy.sh staging'
            }
        }
        
        stage('Deploy to Production') {
            when {
                branch 'release'
            }
            steps {
                // Deployment steps for production
                input message: 'Approve Deployment to Production?'
                sh './deploy.sh prod'
            }
        }
    }
    
    post {
        always {
            // Cleanup or notifications
        }
        success {
            // Actions on success
        }
        failure {
            // Actions on failure
        }
    }
}
